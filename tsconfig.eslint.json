{
  "extends": ["./tsconfig.json"],
  "root": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["./src", "./public"],
  "exclude": ["node_modules", "dist"],
  "plugins": ["@typescript-eslint"]
}
